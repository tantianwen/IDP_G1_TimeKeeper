<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_set_to_bottom"
    tools:context=".WeeklyNotification" >

    <Button
        android:id="@+id/weekly_notification_submit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="22dp"
        android:hint="@string/button_submit" />
    
        <Button
        android:id="@+id/weekly_notification_cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/weekly_notification_submit"
        android:layout_alignBottom="@+id/weekly_notification_submit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="39dp"
        android:hint="@string/button_cancel" />

        <TimePicker
            android:id="@+id/timePicker2"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_above="@+id/weekly_notification_submit"
            android:layout_alignLeft="@+id/weekly_notification_submit" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/timePicker2"
            android:layout_alignTop="@+id/day_choice"
            android:layout_marginLeft="20dp"
            android:text="Day:"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/day_choice"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/timePicker2"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />

</RelativeLayout>