<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Each color is one segment -->
    <color name="orange_bg">#FFA947</color>
    <color name="green_bg">#47FF63</color>
    <color name="torquise_bg">#47FFE7</color>
    <color name="blue_bg">#4774FF</color>
    <color name="purple_bg">#9D47FF</color>
    <color name="white_bg">#FFFFFFFF</color>
    <color name="black_bg">#00000000</color>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        @style/Theme.AppCompat.Light
        -->
    </style>

    <style name="Theme.MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
        <item name="android:actionBarStyle">@style/MainActionBar</item>
    </style>
    <style name="MainActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange_bg</item>
    </style>

    <style name="Theme.ProfileTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
        <item name="android:actionBarStyle">@style/ProfileActionBar</item>
    </style>

    <style name="ProfileActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/orange_bg</item>
    </style>

    <style name="Theme.SettingTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_drawer</item>
        <item name="android:actionBarStyle">@style/SettingActionBar</item>
    </style>

    <style name="SettingActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/purple_bg</item>
    </style>
    

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="SmallButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="SettingText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>